{
  "name": "lazy-ass",
  "description": "Lazy assertions without performance penalty",
  "version": "0.0.0-development",
  "author": "Gleb Bahmutov <gleb.bahmutov@gmail.com>",
  "bugs": {
    "url": "https://github.com/bahmutov/lazy-ass/issues"
  },
  "config": {
    "next-update": {
      "skip": [
        "grunt",
        "grunt-cli",
        "karma"
      ]
    },
    "pre-git": {
      "commit-msg": "simple",
      "pre-commit": [
        "npm test"
      ],
      "pre-push": [
        "npm run size"
      ],
      "post-commit": [],
      "post-merge": []
    }
  },
  "contributors": [],
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "22.2.3",
    "coveralls": "2.13.3",
    "git-issues": "1.3.1",
    "jest": "23.0.1",
    "mocha": "3.5.3",
    "pkgfiles": "2.3.2",
    "pre-git": "3.17.1",
    "prettier": "1.13.2",
    "semantic-release": "^15.5.0",
    "simple-commit-message": "3.3.2",
    "ts-jest": "22.4.6",
    "typescript": "2.8.3"
  },
  "engines": {
    "node": "> 0.8"
  },
  "files": [
    "src",
    "dist"
  ],
  "homepage": "https://github.com/bahmutov/lazy-ass",
  "keywords": [
    "assertion",
    "assertions",
    "browser",
    "debugging",
    "defensive",
    "lazy",
    "node"
  ],
  "license": "MIT",
  "main": "./dist",
  "module": "./src",
  "types": "./src",
  "release": {
    "analyzeCommits": {
      "preset": "angular",
      "releaseRules": [
        {
          "type": "break",
          "release": "major"
        }
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bahmutov/lazy-ass.git"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "prebuild": "npm run clean && npm run pretty",
    "build": "tsc",
    "commit": "git-issues && commit-wizard",
    "coveralls": "cat coverage/PhantomJS*/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "demo": "grunt gh-pages",
    "dont-break": "dont-break --timeout 30",
    "issues": "git-issues",
    "mocha": "mocha test/*.spec.js",
    "pkgfiles": "pkgfiles",
    "pretest": "npm run build",
    "semantic-release": "semantic-release",
    "size": "tarball=\"$(npm pack .)\"; wc -c \"${tarball}\"; tar tvf \"${tarball}\"; rm \"${tarball}\";",
    "test": "npm run unit && npm run jest",
    "unit": "mocha test/commonjs.spec.js",
    "jest": "jest",
    "pretty": "prettier --single-quote --write src/*.ts"
  },
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  }
}
